{
  "build": {
    "devPath": "../src",
    "distDir": "../src",
    "beforeBundleCommand": "powershell -ExecutionPolicy Bypass -File register_file_associations.ps1",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Overtone",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "close": true,
        "startDragging": true,
        "minimize": true
      }
    },
    "windows": [
      {
        "label": "main",
        "title": "Overtone",
        "width": 800,
        "height": 200,
        "resizable": false,
        "decorations": false,
        "alwaysOnTop": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "overtone.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.ico"
      ],
      "resources": [],
			"externalBin": []
    }
  }
}
